{
  "name": "shovel-db",
  "version": "0.1.0",
  "private": true,
  "description": "Lightweight game database",
  "main": "./dist/main.js",
  "scripts": {
    "dev": "npm-run-all -p dev:react electron:serve",
    "dev:electron": "cross-env NODE_ENV=development webpack --config webpack/electron.webpack.ts --mode=development && npm run start:electron",
    "dev:react": "cross-env NODE_ENV=development webpack serve --config webpack/react.webpack.ts --mode=development",
    "electron:serve": "wait-on http-get://localhost:4000/ && npm run dev:electron",
    "start:electron": "electron .",
    "build": "npm-run-all build:electron build:react",
    "build:run": "npm-run-all build start:electron",
    "build:css": "postcss styles.css -o public/build/styles.css",
    "build:electron": "webpack --config webpack/electron.webpack.ts --mode=production",
    "build:react": "webpack --config webpack/react.webpack.ts --mode=production",
    "package": "npm-run-all build package:dist",
    "package:dist": "electron-builder --dir"
  },
  "keywords": [],
  "author": "mnikn",
  "license": "GPL",
  "dependencies": {
    "@electron/remote": "^2.0.9",
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@monaco-editor/loader": "^1.3.3",
    "@mui/icons-material": "^5.11.11",
    "@mui/material": "^5.9.1",
    "csvtojson": "^2.0.10",
    "d3": "^7.8.4",
    "eventemitter3": "^5.0.0",
    "hox": "^2.1.0",
    "json2csv": "^6.0.0-alpha.2",
    "lodash": "^4.17.21",
    "monaco-editor": "^0.36.1",
    "monaco-editor-webpack-plugin": "^7.0.1",
    "monaco-languageclient": "^5.0.1",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-images-uploading": "^3.1.7",
    "react-monaco-editor": "^0.52.0",
    "upath": "^2.0.1"
  },
  "devDependencies": {
    "@types/d3": "^7.4.0",
    "@types/node": "^16.11.45",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/webpack-dev-server": "^4.7.2",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "electron": "^18.2.3",
    "electron-builder": "^23.0.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.30.1",
    "html-webpack-plugin": "^5.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-loader": "^7.1.0",
    "postcss-preset-env": "^8.3.0",
    "prettier": "^2.7.1",
    "style-loader": "^3.3.2",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "wait-on": "^6.0.1",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3"
  },
  "build": {
    "appId": "com.mnikn.shoveldb",
    "productName": "Shovel DB",
    "mac": {
      "category": "public.app-category.software"
    },
    "directories": {
      "output": "packages"
    },
    "files": [
      "package.json",
      "dist/**"
    ],
    "win": {
      "icon": "static/avatar.png"
    }
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.13.0"
  }
}
